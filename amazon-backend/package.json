{
  "name": "amazon-backend",
  "version": "1.0.0",
  "description": "Amazon Clone Backend API with complete e-commerce functionality",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:standalone": "cross-env SKIP_DB_CONNECTION=true nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "seed": "node scripts/seedDatabase.js",
    "build": "npm run lint && npm run test",
    "docker:build": "docker build -t amazon-backend .",
    "docker:run": "docker run -p 5000:5000 amazon-backend"
  },
  "keywords": [
    "ecommerce",
    "amazon-clone",
    "nodejs",
    "express",
    "mongodb",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "html-to-text": "^9.0.5",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.1",
    "slugify": "^1.6.6",
    "socket.io": "^4.7.2",
    "stripe": "^13.3.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.0",
    "validator": "^13.15.15",
    "winston": "^3.18.3",
    "@sendgrid/mail": "^8.1.0",
    "twilio": "^5.3.5",
    "firebase-admin": "^13.0.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
